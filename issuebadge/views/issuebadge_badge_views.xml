<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Badge Form View -->
        <record id="view_issuebadge_badge_form" model="ir.ui.view">
            <field name="name">issuebadge.badge.form</field>
            <field name="model">issuebadge.badge</field>
            <field name="arch" type="xml">
                <form string="Badge Template">
                    <header>
                        <button name="action_issue_badge"
                                string="Issue Badge"
                                type="object"
                                class="btn-primary"
                                help="Issue this badge to someone"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_view_issued_badges"
                                    icon="fa-certificate">
                                <field string="Issued" name="issue_count" widget="statinfo"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Badge Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="badge_id" readonly="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="issue_count" readonly="1"/>
                                <field name="last_issued_date" readonly="1"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Badge Tree View -->
        <record id="view_issuebadge_badge_tree" model="ir.ui.view">
            <field name="name">issuebadge.badge.tree</field>
            <field name="model">issuebadge.badge</field>
            <field name="arch" type="xml">
                <tree string="Badge Templates">
                    <field name="name"/>
                    <field name="badge_id"/>
                    <field name="issue_count"/>
                    <field name="last_issued_date"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Badge Kanban View -->
        <record id="view_issuebadge_badge_kanban" model="ir.ui.view">
            <field name="name">issuebadge.badge.kanban</field>
            <field name="model">issuebadge.badge</field>
            <field name="arch" type="xml">
                <kanban string="Badge Templates">
                    <field name="name"/>
                    <field name="badge_id"/>
                    <field name="issue_count"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-id-badge"/> <field name="badge_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-trophy"/> Issued <field name="issue_count"/> times
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt16">
                                    <div class="oe_kanban_bottom_left">
                                        <button name="action_issue_badge" type="object" class="btn btn-primary btn-sm">
                                            Issue Badge
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Badge Search View -->
        <record id="view_issuebadge_badge_search" model="ir.ui.view">
            <field name="name">issuebadge.badge.search</field>
            <field name="model">issuebadge.badge</field>
            <field name="arch" type="xml">
                <search string="Search Badges">
                    <field name="name"/>
                    <field name="badge_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Badge Action -->
        <record id="action_issuebadge_badge" model="ir.actions.act_window">
            <field name="name">Badge Templates</field>
            <field name="res_model">issuebadge.badge</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No badge templates found
                </p>
                <p>
                    Click the <b>Sync Badges</b> button in Settings to fetch your badge templates from IssueBadge.
                </p>
            </field>
        </record>

    </data>
</odoo>
