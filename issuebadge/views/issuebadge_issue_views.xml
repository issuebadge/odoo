<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Issue Form View -->
        <record id="view_issuebadge_issue_form" model="ir.ui.view">
            <field name="name">issuebadge.issue.form</field>
            <field name="model">issuebadge.issue</field>
            <field name="arch" type="xml">
                <form string="Issued Badge" create="false">
                    <header>
                        <button name="action_open_certificate"
                                string="View Certificate"
                                type="object"
                                class="btn-primary"
                                attrs="{'invisible': [('public_url', '=', False)]}"
                                help="Open the public certificate URL"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_view_partner"
                                    icon="fa-user"
                                    attrs="{'invisible': [('partner_id', '=', False)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Contact</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="recipient_name"/>
                            </h1>
                            <h3>
                                <field name="badge_name"/>
                            </h3>
                        </div>
                        <group>
                            <group string="Badge Information">
                                <field name="name" readonly="1"/>
                                <field name="badge_id" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                            </group>
                            <group string="Recipient Information">
                                <field name="recipient_email"/>
                                <field name="partner_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group string="Certificate">
                            <field name="public_url" widget="url" readonly="1"/>
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1" placeholder="Add any notes about this badge issuance..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Issue Tree View -->
        <record id="view_issuebadge_issue_tree" model="ir.ui.view">
            <field name="name">issuebadge.issue.tree</field>
            <field name="model">issuebadge.issue</field>
            <field name="arch" type="xml">
                <tree string="Issued Badges" create="false">
                    <field name="create_date"/>
                    <field name="badge_name"/>
                    <field name="recipient_name"/>
                    <field name="recipient_email"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <!-- Issue Search View -->
        <record id="view_issuebadge_issue_search" model="ir.ui.view">
            <field name="name">issuebadge.issue.search</field>
            <field name="model">issuebadge.issue</field>
            <field name="arch" type="xml">
                <search string="Search Issued Badges">
                    <field name="recipient_name"/>
                    <field name="recipient_email"/>
                    <field name="badge_id"/>
                    <field name="partner_id"/>
                    <field name="name"/>
                    <filter string="My Issues" name="my_issues" domain="[('user_id', '=', uid)]"/>
                    <filter string="Today" name="today" domain="[('create_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="This Week" name="this_week"
                            domain="[('create_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month"
                            domain="[('create_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Badge Template" name="badge" context="{'group_by': 'badge_id'}"/>
                        <filter string="Issued By" name="user" context="{'group_by': 'user_id'}"/>
                        <filter string="Issue Date" name="date" context="{'group_by': 'create_date:month'}"/>
                        <filter string="Company" name="company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Issue Action -->
        <record id="action_issuebadge_issue" model="ir.actions.act_window">
            <field name="name">Issued Badges</field>
            <field name="res_model">issuebadge.issue</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No badges issued yet
                </p>
                <p>
                    Issue your first badge by going to <b>Badge Templates</b> and clicking <b>Issue Badge</b>.
                </p>
            </field>
        </record>

    </data>
</odoo>
